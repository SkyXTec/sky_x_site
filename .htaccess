# ================================================
# SKY X - Configuração do Servidor Apache
# ================================================

# Habilitar Engine de Reescrita
<IfModule mod_rewrite.c>
  RewriteEngine On
</IfModule>

# ================================================
# MIME TYPES - Essencial para módulos JavaScript
# ================================================
<IfModule mod_mime.c>
  # JavaScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType text/javascript .js
  
  # CSS
  AddType text/css .css
  
  # Imagens
  AddType image/jpeg .jpg .jpeg
  AddType image/png .png
  AddType image/svg+xml .svg
  AddType image/gif .gif
  AddType image/webp .webp
  
  # Fontes
  AddType font/woff2 .woff2
  AddType font/woff .woff
  AddType font/ttf .ttf
  AddType font/eot .eot
</IfModule>

# ================================================
# HEADERS - CORS e Cache
# ================================================
<IfModule mod_headers.c>
  # Permitir CORS para módulos JavaScript
  <FilesMatch "\.(js|mjs)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
  
  # Cache para recursos estáticos
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
    Header set Cache-Control "max-age=604800, public"
  </FilesMatch>
  
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=86400, public"
  </FilesMatch>
  
  # Segurança
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# ================================================
# COMPRESSÃO GZIP
# ================================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ================================================
# CHARSET
# ================================================
AddDefaultCharset UTF-8
<IfModule mod_mime.c>
  AddCharset UTF-8 .html .css .js .xml .json .rss .atom
</IfModule>

# ================================================
# PÁGINAS DE ERRO PERSONALIZADAS (opcional)
# ================================================
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html

# ================================================
# INDEX
# ================================================
DirectoryIndex index.html index.htm

# ================================================
# PERMISSÕES
# ================================================
Options -Indexes
Options +FollowSymLinks

